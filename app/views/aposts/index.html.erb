

<h2>All Posts</h2>

  <div class="col-md-10">
    <div class="row ">
    <% @aposts.each do |apost| %>

    <div class="col-lg-4 mb-4 ">
     <div class="card" style="width: 18rem;">
        <div class="card-header">
          <h3><%= apost.title %></h3>
        </div>
        <div class="card-body">
          <p class="card-text"><h4><%= apost.text %></h4></p>
          <%= link_to 'Show', apost %>
        </div>
</div>
</div>


    <% end %>
      </div>
    </div>




  <div class="col-md-2">
    <div class="card-header"><h3>Categories</h3></div>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center">
           <h4> <%= link_to "All",aposts_path %></h4>
         </li>
       </ul>
     </div>
   </div>
      <% @categories.each do |category| %>
     <div class="card" style="width: 18rem;">

       <div class="card-body">

  <ul class="list-group">

  <li class="list-group-item d-flex justify-content-between align-items-center">
        <h4> <%= link_to category.category,aposts_path(:cate => category.id) %></h4>

<span class="badge badge-pill badge-info" ><%= category.aposts.count %></span>
</li>

         </ul>
 </div>
</div>
 <% end %>
 <br>
</div>
