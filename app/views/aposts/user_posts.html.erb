<p id="notice"><%= notice %></p>

<h2>User's Posts</h2>

  <div class="col-md-10">
<% if @aposts.nil? %>
<h4>No posts<h4>
  <%else%>
  <div class="col-md-12">
    <div class="row ">
    <% @aposts.each do |apost| %>

    <div class="col-lg-4 mb-4 ">
     <div class="card" style="width: 18rem;">
        <div class="card-header">
          <h3><%= apost.title %></h3>
        </div>
        <div class="card-body">
          <p class="card-text"><h4><%= apost.text %></h4></p>
          <%= link_to 'Show', apost %>
        </div>
  </div>
  </div>


    <% end %>
      </div>
    </div>

        <% end %>
  </div>
